<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Arny.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/widget"
    android:theme="@style/Theme.Arny.AppWidgetContainer">

    <TextView
        android:id="@+id/noteTitleWidget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:background="@color/transparent"
        android:maxLines="5"
        android:text="Arnycute"
        android:textSize="@dimen/noteTitle"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/noteSubtileWidget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noteTitleWidget"
        android:layout_marginHorizontal="@dimen/margin"
        android:background="@color/transparent"
        android:gravity="top"
        android:text="Arnycute" />
</RelativeLayout>